<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/office_building"
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:contentDescription="@string/building_image"
        android:padding="5dp"
        android:src="@drawable/ic_office_building_small" />

    <ImageButton
        android:id="@+id/house_building"
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:contentDescription="@string/building_image"
        android:padding="@dimen/item_padding"
        android:src="@drawable/ic_house_building_small" />

    <ImageButton
        android:id="@+id/city_builds"
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:contentDescription="@string/building_image"
        android:padding="@dimen/item_padding"
        android:src="@drawable/ic_city_small" />

    <ImageButton
        android:id="@+id/human_women"
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:contentDescription="@string/building_image"
        android:padding="@dimen/item_padding"
        android:src="@drawable/ic_human_women_small" />

    <ImageButton
        android:id="@+id/human_men"
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:contentDescription="@string/building_image"
        android:padding="@dimen/item_padding"
        android:src="@drawable/ic_human_men_small" />

    <ImageButton
        android:id="@+id/road"
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:contentDescription="@string/building_image"
        android:padding="@dimen/item_padding"
        android:src="@drawable/ic_road_icon" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="@dimen/large_brush"
        android:layout_height="@dimen/large_brush"
        android:contentDescription="@string/building_image"
        android:padding="@dimen/item_padding"
        android:src="@drawable/ic_delete_icon" />

</LinearLayout>