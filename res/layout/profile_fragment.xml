<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.uni.jain.illuxplain.ProfileActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:src="@drawable/ic_blue" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout 
            android:id="@+id/scroll_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/username"
                    style="@style/ProfileTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username_profile"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />

                <TextView
                    android:id="@+id/edit_username"
                    style="@style/ProfileTextStyle.Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/age"
                    style="@style/ProfileTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />

                <TextView
                    android:id="@+id/edit_age"
                    style="@style/ProfileTextStyle.Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/gender"
                    style="@style/ProfileTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />

                <TextView
                    android:id="@+id/edit_gender"
                    style="@style/ProfileTextStyle.Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/education"
                    style="@style/ProfileTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/education"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />

                <TextView
                    android:id="@+id/edit_education"
                    style="@style/ProfileTextStyle.Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/work"
                    style="@style/ProfileTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />

                <TextView
                    android:id="@+id/edit_work"
                    style="@style/ProfileTextStyle.Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/professional"
                    style="@style/ProfileTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/professional_life"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />

                <TextView
                    android:id="@+id/edit_professional"
                    style="@style/ProfileTextStyle.Answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/test_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>